{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}